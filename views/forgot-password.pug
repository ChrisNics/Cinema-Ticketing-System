doctype html 
html
    head

        block head
            meta(charset='UTF-8')
            meta(name="viewport" content='width=device-width,initial-scale=1.0')
            //- <link rel="stylesheet" href="css/style.css" />
            link(rel='stylesheet' href='/css/style.css')
            link(rel='stylesheet'  href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            link(rel='preconnect' href='https://fonts.googleapis.com')
            link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
            link(href='https://fonts.googleapis.com/css2?family=Lilita+One&display=swap' rel='stylesheet')
            link(rel='preconnect' href='https://fonts.googleapis.com')
            link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
            link(href='https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;400;500;600;700&display=swap' rel='stylesheet')
            style
                
            


    title #{title}


    body(data-alert=`${alert ? alert : ''}`) 
        section.modals(style='display:grid;')
            .modals__box#reset-box(style='display:grid')
                img(src="/img/logo.png", alt="logo" class="modals__logo")
                form.modals__form#reset-form
                    h6 
                        span Welcome.
                        |  Reset Password
                    input(type="password" class="modals__input" placeholder="Password")#input-reset-password
                    input(type="password" class="modals__input" placeholder="Confirm Password")#input-reset-password-confirm
                    button.btn--cta#token(data-token=`${token}`) Reset Password
            
        script(src="https://unpkg.com/axios/dist/axios.min.js")
        script(src="/js/indexResetPassword.js" type="module")        